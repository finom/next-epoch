{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}